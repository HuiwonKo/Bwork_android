<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.perples.recosample">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- These permissions are required to use bluetooth -->
    <!-- 블루투스 기능을 사용하기 위해 필요한 권한입니다. -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <!--
         One of these permissions are required for Android API 23 (marshmallow) or higher.
        If you already use one of them, you do not need to add the other permission.
        "ACCESS_COARSE_LOCATION" permission is recommended.
    -->
    <!--
         안드로이드 API 23 (마시멜로우) 이상의 버전에서 필요한 권한입니다.
        ACCESS_COARSE_LOCATION 혹은 ACCESS_FINE_LOCATION 중 1개의 권한만 필요로 합니다.
        당사에서는 ACCESS_COARSE_LOCATION 권한을 권장합니다.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/teamwork"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".FirstScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignIn"
            android:label="SignIn" />
        <activity
            android:name=".SignUp"
            android:label="SignUp" />
        <activity android:name=".RecoMonitoringActivity" />
        <activity android:name=".RecoRangingActivity" />
        <activity android:name=".WhereAmIActivity" />
        <activity android:name=".MainActivity" />

        <service android:name="com.perples.recosdk.RECOBeaconService" />
        <service android:name=".RecoBackgroundMonitoringService" />
        <service android:name=".RecoBackgroundRangingService" />

        <activity android:name=".NavigationActivity" />
        <activity android:name=".AppUsersActivity" />
        <activity
            android:name=".ui.activities.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activities.RegisterActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activities.UserListingActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activities.ChatActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name=".fcm.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".fcm.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".Scheduler_detail"></activity>
    </application>

</manifest>