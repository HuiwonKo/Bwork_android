<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="일주일 간의 근무 정보를 확인하세요!"
            android:textSize="16dp"
            android:background="#515458"
            android:textColor="#ffffffff"
            android:id="@+id/textView3" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/manage_recyclerView"
        android:layout_marginTop="20dp"
        android:scrollbars="vertical"
        android:layout_gravity="center"
        >
    </android.support.v7.widget.RecyclerView>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    >
    <TextView
        android:id="@+id/zanyeo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="잔여 근무 시간"
        android:textStyle="bold"
        android:textAlignment="viewStart"
        android:padding="10dp"
        android:textSize="18dp"
        android:textColor="#ffffffff"
        android:background="#d17c1b"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:id="@+id/finalShiftTimeTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/zanyeo"
        android:text="N / N 시간"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="10dp"
        android:textSize="18dp"
        android:textColor="#ffffffff"
        android:background="#d17c1b"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
</LinearLayout>
